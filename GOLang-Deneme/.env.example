# Kiosk Go Application - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Application Mode: STANDARD, OFFICE, or BUILDING
QR_MODE=STANDARD

# JWT Secret for API authentication
JWT_SECRET=your_jwt_secret_here

# Room/Device Identifier
ROOM_ID=1

# Backend API Base URL
API_BASE_URL=https://pve.izu.edu.tr/randevu/device

# =============================================================================
# BUILDING MODE ONLY
# =============================================================================

# Building ID (only used when QR_MODE=BUILDING)
BUILDING_ID=1

# =============================================================================
# MQTT CONFIGURATION
# =============================================================================

MQTT_BROKER_IP=pve.izu.edu.tr
MQTT_BROKER_PORT=8883
MQTT_USE_TLS=true
MQTT_INSECURE_SKIP_VERIFY=false

# =============================================================================
# OPTIONAL SERVICES (set to "true" to enable)
# =============================================================================

# Enable door lock control via MQTT
ENABLE_LOCK_MQTT=false

# Enable fingerprint registration/verification
ENABLE_FINGERPRINT=false

# Enable device manager (status reporting)
ENABLE_DEVICE_MANAGER=false

# Enable OTA update service
ENABLE_UPDATE_SERVICE=false

# =============================================================================
# SERVICE CONFIGURATION (for device manager and updates)
# =============================================================================

# Git repository path for updates
DESTINATION_DIR=/home/pi/kiosk

# Git branch to track
BRANCH_NAME=main

# Systemd service names
SERVICE_QR=kiosk-qr.service
SERVICE_LOCK=kiosk-lock.service
SERVICE_FINGER=kiosk-finger.service
SERVICE_UPDATE=kiosk-update.service
SERVICE_DEVICEMANAGER=kiosk-dm.service
